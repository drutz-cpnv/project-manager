{% extends 'base.html.twig' %}

{% set hasNavTabs = true %}

{% block title %}Effectif{% endblock %}

{% block navTabs %}
    {{ include('partials/resources/_resources_nav_header.html.twig') }}
{% endblock %}

{% block body %}
    <main class="w-75 mx-auto mt-5">
        <h2 class="h1 mb-5">{{ class }}</h2>

        <hr class="col-3 col-md-2 mb-5">

        <div class="list-group">
        {% for student in class.allStudents %}
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <span class="text-warning">
                    {% if student.isDirector %}
                        <span class="text-warning" data-bs-toggle="tooltip" data-bs-placement="top" title="Directeur {{ student.mainClass }}">
                            {{ feather('zap') }}
                        </span>
                    {% endif %}
                </span>
                <span class="ms-2 me-auto">
                    <span class="fw-bold">{{ student }}</span><br>
                    {#<span class="text-muted">{{ student.user.roleString }}</span><br>#}
                </span>
                <div>
                    {{ include('admin/resources/_form_toggle-director.html.twig') }}
                </div>
            </div>
        {% endfor %}
        </div>
    </main>
{% endblock %}


