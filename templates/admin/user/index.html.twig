{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="w-75 mx-auto mt-5">
        <h4 class="h4 mt-2">Liste des utilisateurs</h4>
        <hr>
        <div class="list-group">
            {% for user in users %}
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="ms-2 me-auto">
                        <span class="fw-bold">{{ user }}</span><br>
                    </span>
                    <div>
                        <a href="{{ path('admin.user.access.ban', {'id': user.id}) }}" class="btn btn-sm btn-outline-warning">{% if user.isBanned %}Débannir{% else %}Bannir{% endif %}</a>
                        <a href="{{ path('admin.user.access', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary">Pérmissions</a>
                        <a href="{{ path('admin.user.edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}