{% extends 'base.html.twig' %}

{% set hasNavTabs = true %}

{% block title %}{{ client }}{% endblock %}

{% block navTabs %}
    {{ include('partials/admin/clients/_client_tabs_header.html.twig') }}
{% endblock %}

{% block body %}
    <main class="w-75 mx-auto mt-5">
        <h2 class="h1 mb-5">Mandats</h2>

        <hr class="col-3 col-md-2 mb-5">

        <div class="list-group">
            {% for mandate in client.mandates %}
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="ms-2 me-auto">
                    <span class="fw-bold">{{ mandate.title }}</span><br>
                    {#<span class="text-muted">{{ student.user.roleString }}</span><br>#}
                </span>
                    <div>
                        <a href="{{ path('admin.mandate.show', {'id': mandate.id}) }}" class="btn btn-warning">Afficher</a>
                    </div>
                </div>
            {% endfor %}
        </div>

    </main>
{% endblock %}


