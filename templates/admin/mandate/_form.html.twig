{{ form_start(form, {attr: {class: "w-75 mx-auto"} }) }}
    <div>
        <h4 class="h4">Données Client</h4>
        <p class="text-muted">Si le client se trouve déjà dans la base donnée uniquement le champs "Email" doit être remplis.</p>
        <hr>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.client_lastname) }}
        </div>
        <div class="col">
            {{ form_row(form.client_firstname) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.client_email) }}
        </div>
        <div class="col">
            {{ form_row(form.client_phonenumber) }}
        </div>
    </div>
    {{ form_row(form.client_company) }}
    <div>
        <h4 class="h4">Données du mandat</h4>
        <hr>
    </div>
    {{ form_row(form.uid) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.desiredDate) }}
    <button class="btn btn-primary">Enregistrer</button>
{{ form_end(form) }}