{% extends 'base.html.twig' %}

{% set hasNavTabs = true %}

{% block navTabs %}
    {{ include('partials/admin/settings/_settings_tabs_header.html.twig') }}
{% endblock %}

{% block title %}Paramètres{% endblock %}

{% block body %}
    <div class="w-75 mx-auto mt-5">
        <h2 class="h1 mb-5">Outils</h2>
        <div class="list-group">
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <span class="text-warning">
                    <span class="text-warning">
                        {{ feather('refresh-ccw') }}
                    </span>
                </span>
                <span class="ms-2 me-auto">
                    <span class="fw-bold">Remettre à zéro</span>
                </span>
                <form action="{{ path('admin.settings.tools.reset') }}" method="post" class="form-button">
                    <input type="hidden" name="_token" value="{{ csrf_token('reset' ~ app.user.id) }}">
                    <button class="btn btn-light text-dark">Éxecuter</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}


