<div class="list-group">
    {% for file in files %}
        <div class="list-group-item d-flex justify-content-between align-items-start">
                <span class="text-warning">
                    <a href="{{ vich_uploader_asset(file) }}" target="_blank" class="text-warning">
                        {{ feather('file') }}
                    </a>
                </span>
            <span class="ms-2 me-auto">
                    <span class="fw-bold"><a href="{{ vich_uploader_asset(file) }}" class="text-black text-decoration-none">{{ file.title }}</a></span><br>
                    <span class="text-muted">Ajouté le {{ file.createdAt | date("d.m.Y à H:i") }}</span><br>
                </span>
            <a href="{{ vich_uploader_asset(file) }}" download="{{file}}" target="_blank" class="btn btn-light text-dark">Télécharger</a>
        </div>
    {% else %}
        <div class="list-group-item d-flex justify-content-between align-items-start">
                <span class="text-danger">
                    {{ feather('x') }}
                </span>
            <span class="ms-2 me-auto">
                    <span class="fw-bold">Aucun fichier</span>
                </span>
        </div>
    {% endfor %}
</div>