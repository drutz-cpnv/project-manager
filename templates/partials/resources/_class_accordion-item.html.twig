<div class="accordion-item">
    <h2 class="accordion-header" id="flush-heading{{accID}}">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse{{accID}}" aria-expanded="false" aria-controls="flush-collapse{{accID}}">
            {{ class }}
        </button>
    </h2>
    <div id="flush-collapse{{accID}}" class="accordion-collapse collapse" aria-labelledby="flush-heading{{accID}}" data-bs-parent="#accordionFlushExample">
        <div class="accordion-body">
            <div class="list-group">
                {% for student in class.allStudents %}
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="text-warning">
                            {% if student.isDirector %}
                                <span class="text-warning" data-bs-toggle="tooltip" data-bs-placement="top" title="Directeur {{ student.mainClass }}">
                                    {{ feather('zap') }}
                                </span>
                            {% endif %}
                        </span>
                        <span class="ms-2 me-auto">
                            <span class="fw-bold">{{ student }}</span><br>
                            {#<span class="text-muted">{{ student.user.roleString }}</span><br>#}
                        </span>
                        <div>
                            {{ include('admin/resources/_form_toggle-director.html.twig') }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>