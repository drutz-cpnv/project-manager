{% extends 'base.html.twig' %}

{% block title %}Mes projets{% endblock %}

{% block body %}
    <div class="w-75 mx-auto mt-5">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h2 class="h1">Liste des projets</h2>
        </div>
        <div class="list-group">
            {% for project in app.user.projects %}
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    {% if project.state is not same as(4) %}
                        <span class="text-warning" data-bs-toggle="tooltip" data-bs-placement="top" title="Projet en cours">
                            {{ feather('zap') }}
                        </span>
                    {% endif %}
                    <span class="ms-2 me-auto">
                        <span class="fw-bold fs-5">{{ project }}</span>
                    </span>
                    <a href="{{ path('project.show', {id: project.id}) }}" class="btn btn-light text-dark">Accéder</a>
                </div>
            {% else %}
                <h3 class="text-warning">Aucun projet ne vous a été attribué</h3>
            {% endfor %}
        </div>
    </div>
{% endblock %}


